<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="parent" alignment="CENTER" prefHeight="900.0" prefWidth="1440.0" spacing="20.0" style="-fx-border-color: #E62F2B;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ovapp.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane minHeight="76.0" prefHeight="76.0" prefWidth="1238.0" style="-fx-background-color: #ff6600;">
        <children>
            <Label fx:id="dateLabel" alignment="CENTER" layoutX="32.0" layoutY="19.0" prefHeight="38.0" prefWidth="112.0" style="-fx-border-color: #FF6600; -fx-background-color: #DEDEDE;">
                <font>
                    <Font name="Calibri" size="15.0" />
                </font>
                <Tooltip fx:id="dateLabelToolTip" styleClass="tooltip" text="de huidige datum" />
            </Label>
            <Label fx:id="clockLabel" layoutX="153.0" layoutY="19.0" prefHeight="38.0" prefWidth="112.0" style="-fx-border-color: #ff6600; -fx-background-color: #DEDEDE;">
                <font>
                    <Font name="Calibri" size="15.0" />
                </font>
                <tooltip>
                    <Tooltip fx:id="clockLabelToolTip" style="-fx-text-fill: #FFFFFF;" text="de huidige tijd" />
                </tooltip>
            </Label>
            <Button fx:id="logInButton" layoutX="1021.0" layoutY="12.0" mnemonicParsing="false" onAction="#onLogInButtonClick" prefHeight="52.0" prefWidth="202.0" style="-fx-border-color: #FF6600;" text="Inloggen">
                <font>
                    <Font name="Calibri" size="22.0" />
                </font>
                <tooltip>
                    <Tooltip fx:id="logInButtonToolTip" styleClass="tooltip" text="klik hier om in te loggen" />
                </tooltip>
            </Button>
            <Button alignment="CENTER" layoutX="296.0" layoutY="13.0" mnemonicParsing="false" onAction="#onChangeModeClick" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #444444;" styleClass="dark-mode" stylesheets="@../../lightmode.css">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <tooltip>
                    <Tooltip fx:id="modeToolTip" styleClass="tooltip" text="Klik hier om te wisselen naar donkere/lichte modus" />
                </tooltip>
            </Button>
            <ImageView fx:id="imgMode" cache="true" fitHeight="52.0" fitWidth="27.0" layoutX="308.0" layoutY="25.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../moon.png" />
                </image>
            </ImageView>
            <Button fx:id="deLanguageButton" layoutX="666.0" layoutY="16.0" mnemonicParsing="false" onAction="#onDuLanguageButtonClick" prefHeight="41.0" prefWidth="76.0" style="-fx-background-image: url('de_flag.png'); -fx-background-size: cover;">
                <tooltip>
                    <Tooltip styleClass="tooltip" text="auf Deutsch umstellen" />
                </tooltip>
            </Button>
            <Button fx:id="enLanguageButton" layoutX="581.0" layoutY="16.0" mnemonicParsing="false" onAction="#onEnLanguageButtonClick" prefHeight="41.0" prefWidth="76.0" style="-fx-background-image: url('uk_flag.png'); -fx-background-size: cover;">
                <tooltip>
                    <Tooltip fx:id="enLanguageButtonToolTip" styleClass="tooltip" text="Switch to English" />
                </tooltip>
            </Button>
            <Button fx:id="nlLanguageButton" layoutX="497.0" layoutY="16.0" mnemonicParsing="false" onAction="#onNlLanguageButtonClick" prefHeight="41.0" prefWidth="76.0" style="-fx-background-image: url('nl_flag.png');-fx-background-size: cover;">
                <tooltip>
                    <Tooltip fx:id="nlLanguageButtonToolTip" styleClass="tooltip" text="wissel naar Nederlands" />
                </tooltip>
            </Button>
        </children>
    </AnchorPane>

    <Pane prefHeight="720.0" prefWidth="1280.0">
        <children>
            <Label fx:id="departureLabel" layoutX="809.0" layoutY="70.0" prefHeight="114.0" prefWidth="415.0" style="-fx-border-color: #FF6600;" textFill="#E62F2B" wrapText="true">
                <tooltip>
                    <Tooltip fx:id="departureLabelToolTip" styleClass="tooltip" text="Hier ziet u uw reisinformatie" />
                </tooltip>
            </Label>
            <Button fx:id="GOButton" layoutX="232.0" layoutY="614.0" mnemonicParsing="false" onAction="#onGOClick" prefHeight="92.0" prefWidth="230.0" style="-fx-border-color: #ff6600;" text="Plan Route">
                <font>
                    <Font name="Calibri" size="22.0" />
                </font>
                <tooltip>
                    <Tooltip fx:id="GOButtonToolTip" style="-fx-text-fill: #FFFFFF;" text="Klik op 'Plan route' nadat u uw vertrek- en bestemmingslocatie en vervoermiddel hebt geselecteerd." />
                </tooltip>
            </Button>
            <ComboBox fx:id="departureCityComboBox" layoutX="232.0" layoutY="32.0" onAction="#onDepartureCityComboBoxClick" prefHeight="41.0" prefWidth="230.0" style="-fx-border-color: #ff6600;">
                <tooltip>
                    <Tooltip fx:id="departureCityComboBoxToolTip" style="-fx-text-fill: #FFFFFF;" text="Klik hier om uw huidige locatie te selecteren (vertreklocatie)." />
                </tooltip>
            </ComboBox>
            <Button fx:id="switchButton" layoutX="324.0" layoutY="96.0" mnemonicParsing="false" onAction="#onSwitchButtonClick" prefHeight="41.0" prefWidth="46.0" style="-fx-border-color: #ff6600;" text="↑↓">
                <font>
                    <Font name="Calibri" size="14.0" />
                </font>
                <tooltip>
                    <Tooltip text="Wissel tussen vertrek en bestemming locatie." />
                </tooltip>
            </Button>
            <ComboBox fx:id="arrivalCityComboBox" layoutX="232.0" layoutY="153.0" onAction="#onArrivalCityComboBoxClick" prefHeight="41.0" prefWidth="230.0" style="-fx-border-color: #ff6600;">
                <tooltip>
                    <Tooltip fx:id="arrivalCityComboBoxToolTip" style="-fx-text-fill: #FFFFFF;" text="Klik hier om uw bestemmingslocatie te selecteren (bestemmingslocatie)." />
                </tooltip>
            </ComboBox>
            <DatePicker fx:id="departureDatePicker" layoutX="232.0" layoutY="527.0" prefHeight="41.0" prefWidth="230.0" style="-fx-border-color: #ff6600;">
                <tooltip>
                    <Tooltip fx:id="departureDatePickerTooltip" style="-fx-text-fill: #FFFFFF;" text="Klik hier om de vertrekdatum te kiezen." />
                </tooltip>
            </DatePicker>
            <Spinner fx:id="departureTimeHours" layoutX="232.0" layoutY="399.0" max="23" min="00" prefHeight="41.0" prefWidth="84.0">
                <tooltip>
                    <Tooltip fx:id="departureTimeHoursToolTip" style="-fx-text-fill: #FFFFFF;" text="Klik hier om het uur van vertrek te selecteren." />
                </tooltip>
            </Spinner>
            <Spinner fx:id="departureTimeMinutes" layoutX="370.0" layoutY="399.0" max="59" min="00" prefHeight="41.0" prefWidth="84.0">
                <tooltip>
                    <Tooltip fx:id="departureTimeMinutesToolTip" styleClass="tooltip" text="Klik hier om de minuten van vertrek te selecteren." />
                </tooltip>
            </Spinner>
            <ComboBox fx:id="transportComboBox" layoutX="232.0" layoutY="277.0" prefHeight="41.0" prefWidth="230.0" style="-fx-border-color: #ff6600;">
                <tooltip>
                    <Tooltip fx:id="transportComboBoxToolTip" styleClass="tooltip" text="Klik hier om een vervoermiddel te kiezen." />
                </tooltip>
            </ComboBox>
            <ImageView fx:id="travelYRouteImg" cache="true" fitHeight="241.0" fitWidth="297.0" layoutX="862.0" layoutY="133.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../TravelYRouteBlanc.png" />
                </image>
            </ImageView>
         <ImageView fitHeight="99.0" fitWidth="95.0" layoutX="83.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Green_Light_Departure.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="114.0" fitWidth="122.0" layoutX="75.0" layoutY="116.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Arrival_Finish_Flag.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="114.0" fitWidth="145.0" layoutX="56.0" layoutY="236.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Transport.jpg" />
            </image>
         </ImageView>
         <ImageView fitHeight="122.0" fitWidth="114.0" layoutX="60.0" layoutY="361.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Travel_Date.jpeg" />
            </image>
         </ImageView>
         <ImageView fitHeight="114.0" fitWidth="121.0" layoutX="60.0" layoutY="490.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Departure_Time.png" />
            </image>
         </ImageView>
        </children>
    </Pane>
    <styleClass>
        <String fx:value="dark-mode" />
        <String fx:value="light-mode" />
    </styleClass>
</VBox>
